    <script type="text/javascript">
  window.onload = function () {
    // initial values of dataPoints
    var dps = [
    {label: "Rent", y: 500}  ,
    {label: "Utilities", y: 60},
    {label: "Misc", y: 100}
    ];
    var totalAmount = "Total Amount Spent: $660";

    var chart = new CanvasJS.Chart("chartContainer",{
      theme: "theme2",
      title:{ 
        text: ""
      },
      axisY: {        
        title: "Amount"
      },          
      legend:{
        verticalAlign: "top",
        horizontalAlign: "centre",
        fontSize: 18

      },
      data : [{
        type: "column",
        showInLegend: true,
        legendMarkerType: "none",       
        legendText: totalAmount,
        indexLabel: "{y}",
        dataPoints: dps
      }]
    });

    // renders initial chart
    chart.render();

    var sum = 660;   //initial sum 

    var updateInterval = 1000;  // milliseconds

    var updateChart = function () {
      // Selecting a random dataPoint
      var dataPointIndex = Math.round(Math.random()*4);   

      // generating random value
      var deltaY = Math.round(2 + Math.random() *(-2-2)); 

      // adding random value to random dataPoint
      dps[dataPointIndex].y = (dps[dataPointIndex].y + deltaY) > 0 ? dps[dataPointIndex].y + deltaY : 0 ;

      // updating legend text. 
      sum = sum + deltaY;
      totalAmount = "Total Amount Spent: $" + sum;      
      chart.options.data[0].legendText = totalAmount;  

      chart.render();

    };
      // update chart after specified interval
      setInterval(function(){updateChart()}, updateInterval);

    } 
    </script>
