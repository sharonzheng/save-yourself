<!DOCTYPE html>
<html>
  <head>
    <title>Create Avatar</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/css/introHCI.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <script type="text/javascript"> 
      var imageList = Array();
      for (var i = 1; i <= 2; i++) {
          imageList[i] = new Image();
          imageList[i].src = "/images/pet0" + i + ".png";
      }

      function switchImage() {
          var selectedImage = document.myForm.switchimg.options[document.myForm.switchimg.selectedIndex].value;
          document.myImage.src = imageList[selectedImage].src;
      }
    </script>
    <style>
      body { background-image:none !important; background-color: #89c65b;}
    </style>
  </head>

  <body>
  <!-- this is a comment in HTML -->
  <div>
    <header>
    <button class="hamburger">&#9776;</button>
    <button class="cross">&#735;</button>
    </header>

    <div class="menu">
    <ul>
        <li><a href="/home">Home</a></li>
        <li><a href="/support">Support</a></li>
    </ul>
    </div>

    <div class="signup" style="text-align: center">
      <h1 class="header-title">Create Avatar</h1>

      <div id="pet">
        <form method="post" action="/create" name="myForm" data ="{{data}}">
        <select name="switchimg" onchange="switchImage();">
            <option value="1">Dog</option>
            <option value="2">Cat</option>
        </select> 
        
      </div><br>

      <img src="images/pet01.png" name="myImage" />
      <br><br><br>
      <input type="submit" value="Confirm" class="btn">
      </form>
      <a href="/" class="btn">Quit</a>
    </div>



    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/introHCI.js"></script>
  </body>
</html>
