    <script>
      var action = 1;
      function changeImage() {
        if (action == 1) {
          document.getElementById("img").src="/images/dog_custom.gif";
          action = 2;
        }
        else {
          document.getElementById("img").src="/images/dog.gif";
          action = 1;
        }

        
      }
    </script>
  </head>

  <body>
  <!-- this is a comment in HTML -->
  <div>
    <header>
    
    <div align="center" style="font-weight: bold; color: white; font-size: 25px;">Shop</div>{{#each user}}
    <div class="shop-coins"><img src="/images/coin.png" style ="margin-top: -5px;" height="22px">&nbsp;{{coins}}</div>
    <button class="hamburger">&#9776;</button>
    <a href="/home"><button class="back"><</button></a>
    <button class="cross">&#735;</button>
    </header>
    {{/each}}

    <div class="menu">
    <ul>
        <li><a href="/home">Home</a></li>
        <li><a href="/analytics">Analytics</a></li> 
        <li><a href="/support">Support</a></li> 
        <li><a href="/settings">Settings</a></li> 
        <li><a href="/logout">Log Out</a></li>
    </ul>
    </div>

    
    <div class="container-shop" style="text-align: center">
      <h1 class="header-title">Preview</h1>
      <img id="img" name="change" src="/images/dog.gif" width="180">
      <p>Accessories</p>
      {{#each user}}
      <div>{{warning}}<br><br></div>
      {{/each}}
      <form method="post" action="/shop" name="myForm" data ="{{data}}">
      <p><img src="/images/acc_collar.png" alt="" id="imgClickAndChange" onclick="changeImage()" width="120"></p>

      <p><input type="submit" value="Buy" class="btn"></p>
      </form>
    </div>
    



